package products;

public class Product {
	
	public Product() {
		//business standard
	}
	
	private static int pid;
	private static String pname;
	private static int price;
	private static int rating;
	private static String manufacturerName;
	
	public Product(int pid, String pname, int price, int rating, String manufacturerName) {
		super();
		Product.pid = pid;
		Product.pname = pname;
		Product.price = price;
		Product.rating = rating;
		Product.manufacturerName = manufacturerName;
	}

	public static int getPid() {
		return pid;
	}

	public void setPid(int pid) {
		Product.pid = pid;
	}

	public static String getPname() {
		return pname;
	}

	public void setPname(String pname) {
		Product.pname = pname;
	}

	public static double getPrice() {
		return price;
	}

	public void setPrice(int price) {
		Product.price = price;
	}

	public static float getRating() {
		return rating;
	}

	public void setRating(int rating) {
		Product.rating = rating;
	}

	public static String getManufacturerName() {
		return manufacturerName;
	}

	public void setManufactureName(String manufactureName) {
		Product.manufacturerName = manufactureName;
	}
	
}
